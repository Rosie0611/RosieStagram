<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_profilePhoto"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#fff"
            android:onClick="profilePhoto"
            android:src="@drawable/profilephoto" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tv_postCount"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="35dp"
                        android:gravity="center"
                        android:text="0"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_follower"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:gravity="center"
                        android:onClick="Follower"
                        android:text="100"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_following"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:onClick="Following"
                        android:text="100"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="0.7">

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="35dp"
                        android:gravity="center"
                        android:text="Post" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:gravity="center"
                        android:text="Follower" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="Following" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.3">

                    <Button
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="10"
                        android:text="Edit Profile"
                        android:textAllCaps="false"
                        android:textSize="15dp" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="3dp"
                        android:layout_weight="1"
                        android:src="@drawable/control" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:text="Amor Fati \n - \n You should know that how amazing person you are \n Keep your breath, focus on you" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_gridAgain"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_apps_black_48dp" />

        <ImageView
            android:id="@+id/ib_listView"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:onClick="onBtnListType"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu_black_48dp" />

        <ImageView
            android:id="@+id/iv_takePic"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_person_pin_black_48dp" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_grade_black_48dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:numColumns="3" />

    <ListView
        android:id="@+id/listview_secondpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:transcriptMode="alwaysScroll"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_home_black_48dp" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_search_black_48dp" />

        <ImageView
            android:id="@+id/iv_addPhoto"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_add_box_black_48dp" />

        <ImageView
            android:id="@+id/iv_IveLiked"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:onClick="MoveOnNotification"
            android:src="@drawable/ic_favorite_black_48dp" />

        <ImageView
            android:id="@+id/iv_chat"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_perm_identity_black_48dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#000" />

</LinearLayout>
